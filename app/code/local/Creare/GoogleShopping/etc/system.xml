<config>
    <tabs>
        <creare translate="label" module="crearegoogleshopping">
            <label>Creare</label>
            <sort_order>110</sort_order>
        </creare>
    </tabs>
    <sections>
        <crearegoogleshopping translate="label" module="crearegoogleshopping">
            <label>Google Shopping</label>
            <tab>creare</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label" module="crearegoogleshopping">
                    <label>Google Shopping Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Google Shopping Feed</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[<small>http://www.yourdomain.com/crearegoogleshopping</small>]]></comment>
                        </enabled>
                        <default_brand translate="label">
                            <label>Default Brand</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                            <depends><enabled>1</enabled></depends>
                        </default_brand>
                        <default_category translate="label">
                            <label>Default Google Product Category</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                            <depends><enabled>1</enabled></depends>
                        </default_category>
                        <brand_code translate="label">
                            <label>Brand Attribute Code</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enabled>1</enabled></depends>
                        </brand_code>
                        <google_category_code translate="label">
                            <label>Google Category Attribute Code</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enabled>1</enabled></depends>
                        </google_category_code>
                    </fields>
                </settings>
            </groups>
        </crearegoogleshopping>
    </sections>
</config>